clean:
	@rm -rf *.aux *.lsb *.lsg *.log *.blg *.toc *.lot *.lof *.idx *.ilg *.ind *.bbl *.out *.nav *.loalg  *.locod  *.logr *.loq *.brf
rclean: 
	@rm -rf *.aux *.lsb *.lsg *.log *.blg *.toc *.lot *.lof *.idx *.ilg *.ind *.bbl *.out *.nav *.loalg  *.locod  *.logr *.loq *.brf
	@rm -rf *.ps *.dvi *.pdf

